<% posts.each do |post| %>
  <div class="col-4"> <!-- Cada post serÃ¡ exibido em uma coluna -->
    <%= link_to post_path(post) do %>
      <div class="post-stat d-flex justify-content-center align-items-center">
        <span>
          <i class="fa fa-heart" aria-hidden="true"></i>
          <%= post.likes.size %>
          <i class="ml-3 fa fa-comment" aria-hidden="true"></i>
          <%= post.comments.size %>
        </span>
      </div>
      <% if post.photos.any? && post.photos.first.image.present? %>
  <%= image_tag post.photos.first.image.url(:standard), class: "card-img-top image-preview" %>
<% else %>
  <p>No images available</p>
<% end %>
    <% end %>
  </div>
<% end %>
